{
  "CN": "etcd",
  "hosts": [
{% for host in groups['etcd'] %}
    "{{ host }}",
{% endfor %}
    "127.0.0.1"
  ],
  "key": {
    "algo": "rsa",
    "size": 2048
  },
  "names": [
    {
      "C": "{{ country }}",
      "ST": "{{ state }}",
      "L": "{{ locality }}",
      "O": "{{ organization }}",
      "OU": "{{ unit }}"
    }
  ]
}